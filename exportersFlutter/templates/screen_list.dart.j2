{% set class_lower = class_name|lower %}
import 'package:flutter/material.dart';
import '../services/api_service.dart';

class {{ class_name }}ListScreen extends StatefulWidget {
  const {{ class_name }}ListScreen({super.key});

  @override
  State<{{ class_name }}ListScreen> createState() => _{{ class_name }}ListScreenState();
}

class _{{ class_name }}ListScreenState extends State<{{ class_name }}ListScreen> {
  List<dynamic> items = [];
  bool loading = true;

  @override
  void initState() {
    super.initState();
    fetchData();
  }

  Future<void> fetchData() async {
    final response = await ApiService().getData('api/{{ class_lower }}s');
    setState(() {
      items = response ?? [];
      loading = false;
    });
  }

  Future<void> deleteItem(int id) async {
    await ApiService().deleteData('api/{{ class_lower }}s/$id');
    fetchData();
  }

  String buildSubtitle(Map<String, dynamic> item) {
    final buffer = StringBuffer();

    {% for attr in attributes if attr.name != 'id' %}
    if (item['{{ attr.name }}'] != null) {
      buffer.writeln('{{ attr.name | capitalize }}: ${item['{{ attr.name }}']}');
    }
    {% endfor %}

    {% for rel in relations if rel.tipo == 'ManyToOne' %}
    if (item['{{ rel.destino|lower }}'] != null) {
      final relItem = item['{{ rel.destino|lower }}'];
      final label = relItem['nombre'] ?? relItem['titulo'] ?? 'ID: ${relItem['id']}';
      buffer.writeln('{{ rel.destino | capitalize }}: $label');
    }
    {% endfor %}

    return buffer.toString();
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text('{{ class_name }}s')),
      floatingActionButton: FloatingActionButton(
        onPressed: () async {
          await Navigator.pushNamed(context, '/{{ class_lower }}Detail');
          fetchData(); // ðŸ” refresca al volver
        },
        child: const Icon(Icons.add),
      ),
      body: loading
          ? const Center(child: CircularProgressIndicator())
          : ListView.builder(
              itemCount: items.length,
              itemBuilder: (context, i) {
                final item = items[i];
                return Card(
                  margin: const EdgeInsets.symmetric(horizontal: 12, vertical: 6),
                  child: ListTile(
                    title: Text('ID: ${item['id']}'),
                    subtitle: Text(buildSubtitle(item)),
                    trailing: Row(
                      mainAxisSize: MainAxisSize.min,
                      children: [
                        IconButton(
                          icon: const Icon(Icons.edit),
                          onPressed: () async {
                            // ðŸ” Obtener datos completos antes de editar
                            showDialog(
                              context: context,
                              barrierDismissible: false,
                              builder: (_) => const Center(child: CircularProgressIndicator()),
                            );

                            final fullData = await ApiService().getOne("api/{{ class_lower }}s/${item["id"]}");
                            Navigator.pop(context); // cerrar el loading

                            if (fullData != null) {
                              await Navigator.pushNamed(
                                context,
                                '/{{ class_lower }}Detail',
                                arguments: fullData,
                              );
                              fetchData(); // ðŸ” refresca despuÃ©s de editar
                            }
                          },
                        ),


                        IconButton(
                          icon: const Icon(Icons.delete, color: Colors.red),
                          onPressed: () => deleteItem(item['id']),
                        ),
                      ],
                    ),
                  ),
                );
              },
            ),
    );
  }
}
